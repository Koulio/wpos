<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_app"
>

    <include layout="@layout/top_title"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DDDDDD"
            android:weightSum="4"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal" android:layout_weight="3" android:weightSum="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#DDDDDD"
                    android:weightSum="11"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/downloadStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold|italic"
                            android:gravity="center"
                            android:text=""
                            android:textSize="15sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/ctmkText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Clear Terminal Master Key (CTMK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/cbdkText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Clear Base Derivation Key (CBDK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/emvParamText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="EMV Param ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/tmkText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Terminal Master Key (TMK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/tpkText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Terminal PIN Key (TPK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/tskText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Terminal Session Key (TSK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/aidText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="EMV Application Identifier (AID) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
                    <TextView
                            android:id="@+id/capkText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="EMV Certificate Authority Public Key (CAPK) ..."
                            android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">

                    <TextView
                            android:id="@+id/termParamText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:text="Terminal Parameter ..."
                            android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal" android:layout_weight="1" android:weightSum="1">
        </LinearLayout>
    </LinearLayout>



</LinearLayout>

